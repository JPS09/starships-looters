<div class="container-ship-index">
  <h2 class="mb-3">Ships available</h2>


  <div class="cards c-index">
    <% @ships.each do |ship| %>
      <%= render 'shared/ship_card', ship: ship %>
    <% end %>
  </div>

  <div class="d-flex justify-content-center">
    <%= link_to "See my ships", my_ships_path, class: "btn" %>
  </div>
  <div class="d-flex justify-content-center">
    <%= link_to "Back to home", root_path, class: "btn" %>
  </div>
</div>
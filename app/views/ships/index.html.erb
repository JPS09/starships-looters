<div class="container-ship-index">
  <h2 class="mb-3">Ships available</h2>


  <div class="cards c-index">
    <% @ships.each do |ship| %>
      <%= link_to ship_path(ship.id), class: "card-img" do %>
        <div class="card" style="background-image: linear-gradient(rgba(10, 10, 10, 0.3), rgba(240, 240, 240, 0.3)), url('https://res.cloudinary.com/teka/image/upload/v1605873393/<%= ship.photo.key %>.jpg')">
          <h3 class="c-ship-name"><%= ship.name %></h3>
          <div class="c-ship-details">
            <h3><%= ship.user.nickname.capitalize %></h3>
            <h3><%= "#{number_with_delimiter(ship.price_per_day, delimiter: '.')} â‚¹"%></h3>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="d-flex justify-content-center">
    <%= link_to "See my ships", my_ships_path, class: "btn" %>
  </div>
  <div class="d-flex justify-content-center">
    <%= link_to "Back to home", root_path, class: "btn" %>
  </div>
</div>
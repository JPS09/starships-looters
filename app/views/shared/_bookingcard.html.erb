<div class="cards">
  <div class="card">
    <div class="description">
      <h3>Status:</h3>
      <p><%=booking.status %></p>
      <h3>Crew size:</h3>
      <p> <%= booking.crew_size %></p>
    </div>
    <div class="dates">
      <div class="start">
        <h3>Starting Date</h3>
        <p><%= booking.date_start %></p>
      </div>
      <div class="end">
        <h3> Ending Date</h3>
        <p><%= booking.date_end %></p>
      </div>
    </div>
  </div>
</div>
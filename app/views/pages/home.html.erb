<div class="home" id="home">
  <div class="container">
    <h1 class="home-title">The best space ships of the universe</h1>
    <div class="text-center mt-5">
      <h1><%= link_to "Enter", ships_path(), class: "btn btn-info home-color" %></h1>
    </div>
  </div>
</div>

<div class="container mt-5">
  <h2>Ships selection</h2>
  <div class="cards c-home">
    <% @ships.each do |ship| %>
      <div class="card">
        <%= cl_image_tag ship.photo.key rescue image_tag 'missing.jpg' %>
        <div class="card-body">
          <h3><%= ship.name %></h3>
          <p><%= ship.description %></p>
          <span>Price per day: <%= "#{number_with_delimiter(ship.price_per_day, delimiter: '.')} â‚¹"%></span>
        </div>
        <div class="card-footer">
          <%= link_to "More info", ship_path(ship.id), class: "card-link text-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
